import random

# Example Lists (you'll replace these with your actual spell and skill lists)
creature_types = ["Demon", "Elemental", "Mineral", "Ancestral", "Beast", "Plant"]
ritual_circles = ["Law", "Chaos", "Good", "Evil", "Reality", "Illusion", "Fortune", "Fate", "Knowledge", "Magic", "Spirit", "Time", "Earth", "Air", "Water", "Fire"]
pattern_types = ["Magical", "Living", "Unliving", "Alien"]
skills = ["DR magebolt", "DR all", "DR harm", "DR fatal", "Beguile", "Imm to IMMOB", "Imm to MIND", "Imm to Petrify", "3 Blow Harm", "3 Blow Fatal", "Minor ritual boost", "Major ritual boost", "Special ritual boost", "Discern Race and Pattern Type", "+10 dismiss", "High Magic"]

# Function to generate a random creature type
def generate_creature_type():
    return random.choice(creature_types)

# Function to generate a random ritual circle
def generate_ritual_circle():
    return random.choice(ritual_circles)

# Function to generate a random skill
def generate_skill():
    return random.choice(skills)

# Function to generate a random pattern type
def generate_pattern_type():
    return random.choice(pattern_types)

# Example usage for generating a complete ritual
def generate_ritual():
    creature = generate_creature_type()
    circle = generate_ritual_circle()
    skill = generate_skill()
    pattern_type = generate_pattern_type()

    print(f"Ritual Summary:")
    print(f"Creature Type: {creature}")
    print(f"Ritual Circle: {circle}")
    print(f"Skill: {skill}")
    print(f"Pattern Type: {pattern_type}")

# Run example ritual generation
generate_ritual()
